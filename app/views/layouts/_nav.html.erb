            <li class="nav-item">
              <%= link_to current_user.username.capitalize, user_show_path(current_user), class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%=link_to('Logout', destroy_user_session_path, method: :delete, class: "nav-link")%>
