<h2 class="text-center mt-5">Log in</h2>

<div class="row">
  <div class="col-4 offset-4">
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.text_field :username, wrapper: { class: 'field mt-5', data: {}} %>
      <%= f.password_field :password, wrapper: { class: 'field mt-3', data: {}} %>
      <%= f.check_box :remember_me, wrapper_class: "field mt-3" %>
      <%= f.submit "Log In", class: 'actions mt-3' %>
    <% end %>
    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>