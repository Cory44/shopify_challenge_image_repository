<h2 class="text-center mt-5">Add Photo</h2>

<div class="row">
  <div class="col-md-4 offset-md-4 col-12">
    <%= bootstrap_form_for(@photo, url: create_path) do |f| %>
      <%= f.file_field :image, multiple: false, direct_upload: false, wrapper: { class: 'mt-3', data: {}}%>
      <%= f.text_field :tags, wrapper: { class: 'mt-3', data: {}}%>
      <%= f.text_area :description, wrapper: { class: 'mt-3', data: {}}%>
      <%= f.form_group :private, class: "mt-3" do %>
        <%= f.radio_button :private, true, label: "Private", label_class: "whiteClass", value: true, inline: true %>
        <%= f.radio_button :private, false, label: "Public", label_class: "whiteClass", value: false, inline: true, checked: true %>
      <% end %>
      <%= f.submit "Add photo", class: 'actions mt-3 btn btn-primary' %>
    <% end %>
  </div>
</div>